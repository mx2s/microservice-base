#%RAML 1.0
title: Sharpy JSON
version: 0
documentation:
  - title: Sharpy JSON
    content: |
      API v0 JSON API examples can be found here

/auth:
  description: Registration & authorization 

  /login:
    get:
      responses:
        200:
          body:
            application/json:
                type: |
                  {
                    "command": 1, // Login
                    "data": {
                      "login": "username",
                      "password": "password"
                    }
                  }
                example: |
                  {
                    "command": 1,
                    "status": 1, // Success
                    "data": {
                      "token": "42b07d383c334",
                      "userId": 2
                    }
                  }
  /logout:
    get:
      responses:
        200:
          body:
            application/json:
                type: |
                  {
                    "command": 2, // Logout
                    "data": {
                      "token": "42b07d383c334",
                      "userId": 2
                    }
                  }
                example: |
                  {
                    "command": 2,
                    "status": 1, // Success
                  }
  /register:
    get:
      responses:
        200:
          body:
            application/json:
                type: |
                  {
                    "command": 3, // Register
                    "data": {
                      "login": "testuser",
                      "password": "strongPass",
                      "email": "testemail@domain.com"
                    }
                  }
                example: |
                  {
                    "command": 3,
                    "status": 1, // Success
                  }
